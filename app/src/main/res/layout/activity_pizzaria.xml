<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pizzaria">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:padding="8dp"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Logo no Top Bar -->
                    <ImageView
                        android:id="@+id/logoImage"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/logo_pizza"
                        android:contentDescription="Logo"/>

                    <!-- TÃ­tulo no Top Bar -->
                    <TextView
                        android:id="@+id/toolbarTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pizzaria"
                        android:textSize="20sp"
                        android:textColor="@android:color/white"
                        android:layout_marginStart="16dp"/>
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="0dp"
                android:elevation="0dp"
                android:radius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/pizzaImage"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/pizza1"
                        android:scaleType="centerCrop"
                        android:contentDescription="Imagem da pizza"
                        android:layout_marginEnd="8dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/pizzaNome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Marguerita"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/pizzaPreco"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R$ 29,99"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="4dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            android:gravity="center">

                            <Button
                                android:id="@+id/btnDiminuir1"
                                android:layout_width="60dp"
                                android:layout_height="40dp"
                                android:text="-"
                                android:textColor="@color/white"
                                app:cornerRadius="0dp"
                                android:backgroundTint="@color/red"
                                android:textSize="20sp"
                                android:onClick="Decrementar"
                                />

                            <TextView
                                android:id="@+id/QuantPizza1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:text="0"
                                android:textSize="18sp"
                                android:gravity="center"/>

                            <Button
                                android:id="@+id/btnAumentar1"
                                android:layout_width="60dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="0dp"
                                android:backgroundTint="@color/red"
                                android:text="+"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                app:cornerRadius="0dp"
                                android:onClick="Incrementar" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="0dp"
                android:elevation="0dp"
                android:radius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/pizzaImage"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/pizza2"
                        android:scaleType="centerCrop"
                        android:contentDescription="Imagem da pizza"
                        android:layout_marginEnd="8dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/pizzaNome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Calabreza"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/pizzaPreco"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R$ 39,99"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="4dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            android:gravity="center">

                            <Button
                                android:id="@+id/btnDiminuir2"
                                android:layout_width="60dp"
                                android:layout_height="40dp"
                                android:text="-"
                                android:textColor="@color/white"
                                app:cornerRadius="0dp"
                                android:backgroundTint="@color/red"
                                android:textSize="20sp"
                                android:onClick="Decrementar"
                                />

                            <TextView
                                android:id="@+id/QuantPizza2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:text="0"
                                android:textSize="18sp"
                                android:gravity="center"/>

                            <Button
                                android:id="@+id/btnAumentar2"
                                android:layout_width="60dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="0dp"
                                android:backgroundTint="@color/red"
                                android:text="+"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                app:cornerRadius="0dp"
                                android:onClick="Incrementar" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="0dp"
                android:elevation="0dp"
                android:radius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/pizzaImage"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/pizza3"
                        android:scaleType="centerCrop"
                        android:contentDescription="Imagem da pizza"
                        android:layout_marginEnd="8dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/pizzaNome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Peperone"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/pizzaPreco"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R$ 29,99"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="4dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            android:gravity="center">

                            <Button
                                android:id="@+id/btnDiminuir3"
                                android:layout_width="60dp"
                                android:layout_height="40dp"
                                android:text="-"
                                android:textColor="@color/white"
                                app:cornerRadius="0dp"
