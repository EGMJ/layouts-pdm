                                android:gravity="center"/>

                            <Button
                                android:id="@+id/btnAumentar3"
                                android:layout_width="60dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="0dp"
                                android:backgroundTint="@color/red"
                                android:text="+"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                app:cornerRadius="0dp"
                                android:onClick="Incrementar" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="0dp"
                android:elevation="0dp"
                android:radius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/pizzaImage"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/pizza4"
                        android:scaleType="centerCrop"
                        android:contentDescription="Imagem da pizza"
                        android:layout_marginEnd="8dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/pizzaNome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pizza docÃª"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/pizzaPreco"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R$ 49,99"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="4dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            android:gravity="center">

                            <Button
                                android:id="@+id/btnDiminuir4"
                                android:layout_width="60dp"
                                android:layout_height="40dp"
                                android:text="-"
                                android:textColor="@color/white"
                                app:cornerRadius="0dp"
                                android:backgroundTint="@color/red"
                                android:textSize="20sp"
                                android:onClick="Decrementar"
                                />

                            <TextView
                                android:id="@+id/QuantPizza4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:text="0"
                                android:textSize="18sp"
                                android:gravity="center"/>

                            <Button
                                android:id="@+id/btnAumentar4"
                                android:layout_width="60dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="0dp"
                                android:backgroundTint="@color/red"
                                android:text="+"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                app:cornerRadius="0dp"
                                android:onClick="Incrementar" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/footerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="#F8F8F8"
                android:layout_gravity="bottom">

                <!-- Texto que exibe o valor total das pizzas -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total:"
                    android:textSize="18sp"
                    android:paddingEnd="8dp"/>

                <TextView
                    android:id="@+id/txtTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R$ 0,00"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:gravity="start"/>

                <!-- BotÃ£o para confirmar -->
                <Button
                    android:id="@+id/btnVoltar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voltar"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/black"
                    android:textColor="#FFFFFF"
                    android:onClick="Voltar"
                    android:padding="10dp"/>

                <!-- BotÃ£o para cancelar -->
                <Button
                    android:id="@+id/btnFinalizarPedido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Finalizar"
                    android:backgroundTint="@color/red"
                    android:textColor="#FFFFFF"
                    android:padding="10dp"/>

            </LinearLayout>

        </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>