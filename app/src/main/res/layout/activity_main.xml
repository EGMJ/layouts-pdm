<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:padding="8dp"
                app:title="Menu para todas as telas"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            </androidx.appcompat.widget.Toolbar>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                    <!-- Botão para calcular -->
                    <Button
                        android:id="@+id/btnCalcular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#000000"
                        android:text="Poupança"
                        android:onClick="TelaPoupanca"
                        android:textColor="@color/white" />
                    <Button
                        android:id="@+id/btnOpc2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Quiz Transito"
                        android:layout_marginTop="8dp"
                        android:onClick="TelaTransito"
                        android:backgroundTint="#000000"
                        android:textColor="@android:color/white"/>
                    <Button
                        android:id="@+id/btnOpc3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pizzaria"
                        android:onClick="TelaPizzaria"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#000000"
                        android:textColor="@android:color/white"/>
                    <Button
                        android:id="@+id/btnOpc4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Restaurante"
                        android:onClick="TelaRestaurante"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#000000"
                        android:textColor="@android:color/white"/>
                <Button
                    android:id="@+id/btnSair"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sair"
                    android:onClick="Sair"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#000000"
                    android:textColor="@android:color/white"/>

            </LinearLayout>
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>